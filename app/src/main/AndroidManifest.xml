<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pembukuanusaha">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PembukuanUsaha">

        <activity
            android:name=".activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.RegisterActivity"
            android:exported="false" />

        <activity android:name=".activity.MainActivity" android:exported="false" />
        <activity android:name=".activity.TambahTransaksiActivity" android:exported="false" />
        <activity android:name=".activity.DaftarTransaksiActivity" android:exported="false" />
        <activity android:name=".activity.TambahPengeluaranActivity" android:exported="false" />
        <activity android:name=".activity.TambahProdukActivity" android:exported="false" />
        <activity android:name=".activity.DaftarProdukActivity" android:exported="false" />
        <activity android:name=".activity.AyoBelanjaActivity" android:exported="false" />
        <activity android:name=".activity.InsightActivity" android:exported="false" />
        <activity android:name=".activity.GrafikActivity" android:exported="false" />
        <activity android:name=".activity.ExportActivity" android:exported="false" />
        <activity android:name=".activity.BackupRestoreActivity" android:exported="false" />

        <activity
            android:name=".activity.TambahKaryawanActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>